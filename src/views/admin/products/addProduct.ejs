<!DOCTYPE html>
<html lang="en">
    <%-include("../partials/head")%>
<body>
    <%-include("../partials/header")%>
    <main class="container"> 
      <form action="/admin/productos" method="POST">
      <fieldset class="rounded border w-90 mx-auto p-4" id="fondo-mainAdmin">
          <legend class="text-center">AGREGAR PRODUCTO</legend> 
  
  
      <div class="mb-3 col-md-6">
          <label for="name" class="form-label">Nombre</label>
          <input type="text" name="name" class="form-control" id="name" placeholder="Ingresa nombre de producto">
  </div>
  <div class="mb-3 col-md-6">
      <label for="price" class="form-label">Precio</label>
      <input type="number" name="price" class="form-control" id="price" placeholder="ej:$1000">
  </div>
  
  <div class="mb-3 col-md-6">
      <label for="discount" class="form-label">Descuento</label>
      <input type="number" name="discount" class="form-control" id="discount" placeholder="Ingresar descuento">
  </div>
      <div class="container" id="Container-admin">
        <label for="exampleDataList" class="form-label">Categorias</label>
          <input name="categoryId" class="form-control" list="datalistOptions" id="exampleDataList" placeholder="Seleccione Categoria">
          <datalist id="datalistOptions">
          <option value="aventura-simulacion">
          <option value="aventura-accion">
          <option value="rpg-simulacion">
          <option value="accion-rpg">
         <option value="rol-aventura">  
        </datalist>
      </div>
      <div class="form-check form-switch pt-3">
          <input class="form-check-input" name="Stock" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Stock</label>
        </div>

        
        <div class="mb-3">
          <label for="formFile" class="form-label">Agregar archivo de imagen</label>
          <input class="form-control" type="file" id="formFile">
        </div>
        <br>
        <div class="mb-3 " id="Container-admin">
          <label for="exampleFormControlTextarea1" class="form-label">Descripcion</label>
          <textarea class="form-control texto-area-main" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <br>
        <div class="col-12" id="boton-adminMain">
          <button class="btn btn-primary" type="submit">Crear producto</button>
        </div>
      </fieldset>
   </form>
  </main>
    
            <%-include("../partials/footer")%>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>