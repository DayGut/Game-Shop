<!DOCTYPE html>
<%-include("../partials/head")%>
<body>
    <%-include("../partials/header")%>

    <main>
        <article >
            <button >
                <a href="/admin/categories/addCategory">
                    Nueva Categoría
                </a>
            </button>
        </article>
        <article >
            <form action="/admin/categories/searchCategory" method="get">
                <input type="text" name="search" id="search" placeholder="Buscar Categoría">
                <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
            </form>
        </article>

        <article class="container-fluid">
            <table class="table table-striped table-hover">
                <thead>
                  <tr class="text-center">
                    <th scope="col">id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                    <% categorias.forEach(categoria => { %>
                        <tr class="text-center">
                            <th scope="row"><%=categoria.id%></th>
                            <td><%=categoria.name%></td>
                            <td>
                              <a href="/admin/categories/editCategory/<%- categoria.id %>" class="btn" id="btn-admin-modificacion">
                                <i class="fa-solid fa-pen-to-square"></i>
                              </a>
                              <form action="/admin/categories/delete/<%- categoria.id %>?_method=DELETE" method="POST">
                                <button type="submit" class="btn" id="btn-admin-borrar">
                                  <i class="fa-solid fa-trash-can"></i>
                                </button>
                              </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
              </table>
        </article>
        <a href="/">Salir del administrador</a>
    </main>

    
   
</body>
<%-include("../partials/footer")%>
</html>