<!DOCTYPE html>
<html lang="en">
    <%-include('../partials/head') %>
    
    <!-- header-->
    <%-include('../partials/header') %>
    <script src="/js/dark.js" defer></script>
<body>
<!--fin header-->

<!-- MAIN -->

    <section class="contenedor">
        <h2 class="titulo-seccion"> <%= titulo %> </h2>
        
       <form  class="contenedor-shop" method="get" >
       
        <% if(carshop.length > 0) { %>
            <% carshop.forEach(shop => { %>
              
                
              
             <ol class="product-shop">
                    <li class="caja-imagen">
                        <img src="/images/<%=shop.image%>" alt="Game" class="img-shop">
                    </li>
                    <ol class="datos-shop-detalle">
                        <li>
                            <li><p class="name-shop"><%=shop.name%> </p></li>
                           <li><p>Descripcion: <%=shop.description%></p></li> 
                        </li>
                    </ol>
                    <ol class="datos-shop"> 
                        <li>
                            <p>Precio: $<%=shop.price%></p>
                            <label for="">Cantidad</label>
                            <input type="number" id="tentacles" name="tentacles"
                            min="1" max="100">
                           
                        </li>
                        <li><p>Subtotal: </p></li>
                        
                            <button class="btn btn-danger" type="submit" >
                              <i class="fa-solid fa-trash-can"></i>
                            </button>
                          
                    </ol>
            </ol>
            
      <% }) %>
      <% }  %>	
      <p class="total-shop">Total: $</p>
      <div class="buttons-shop">
        <a href="/" class="btn-cancel-shop">Cancel</a>
        <input type="submit" class="btn-save-shop" value="save">
    </div>
        </form>
        <a href="https://api.whatsapp.com/send?phone=+51987654321" class="btn-wsp" target="_blank">
            <i class="fa fa-whatsapp icono"></i>
        </a>
    </section>

<!-- fin del main -->

<!-- footer-->
<%-include('../partials/footer') %>
<!-- fin footer-->