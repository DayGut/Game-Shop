<!DOCTYPE html>
<html lang="en">

    <%-include('../partials/head') %>
    <script src="/js/registerValidator.js"></script>
    <script src="/js/hamburguesa.js"></script>

<body>
    <!-- header-->
    <%-include('../partials/header') %>
    
    <!--fin header-->
    <!--Register-->
    
    <div class="register-form">
        <h1>Form Registration</h1>
        <div class="is-valid">
        <form action="/user/registro" method="post" enctype="multipart/form-data" id="form">
            <div class="is-invalid">
            <label form="nombre">User name</label>
            <input type="text" name="name" id="name" placeholder="Nombre" value="<%= (locals.old && old.name) ? old.name : "" %>">
                <small class="text-danger" id="nameErrors"><%= (locals.errors && errors.name) ? errors.name.msg : "" %></small>
            </div>
            <div>
                <label form="lastname">Lastname</label>
                <input type="text" name="lastname" id="lastname" placeholder="Apellido" value="<%= (locals.old && old.lastname) ? old.lastname : "" %>">
                    <small class="text-danger" id="lastnameErrors"><%= (locals.errors && errors.lastname) ? errors.lastname.msg : "" %></small>
                </div>
            <div>
            <label form="email">E-mail</label>
            <input type="email" name="email" id="email" placeholder="E-mail" value="<%= (locals.old && old.email) ? old.email : "" %>">
                <small class="text-danger" id="emailErrors"><%= (locals.errors && errors.email) ? errors.email.msg : "" %></small>
            </div>
        <div>
            <label form="pass">Password</label>
            <input type="password" name="pass" id="pass" placeholder="Contraseña" value="<%= (locals.old && old.pass) ? old.pass : "" %>">
                <small class="text-danger" id="passErrors"><%= (locals.errors && errors.pass) ? errors.pass.msg : "" %></small>
        </div>
        <div>
            <label form="pass2">Repeat Password</label>
            <input type="password" name="pass2" id="pass2" value="<%= (locals.old && old.pass2) ? old.pass2 : "" %>">
            <small class="text-danger" id="pass2Errors"><%= (locals.errors && errors.pass2) ? errors.pass2.msg : "" %></small>
        </div>
            <div class="form--group">
                <label for="avatar">Avatar</label>
                <input type="file" name="avatar" id="formFile"  value="<%= (locals.old && old.avatar) ? old.avatar : "" %>">
                    <small class="text-danger" id="fileErrors"><%= (locals.errors && errors.avatar) ? errors.avatar.msg : "" %></small>
            </div><br>

            <div>
                <input class="form-check-input" name="terms" type="checkbox" value="" id="terms" value="<%= (locals.old && old.terms) ? old.terms : "" %>">
                <label class="form-check-label" for="terms">
                    Acepto los términos y condiciones
                </label>
                    <small class="text-danger" id="termsErrors"><%= (locals.errors && errors.terms) ? errors.terms.msg : "" %></small>
            </div>   
            <div class="botones-registro">
                <input type="submit" class="btn-save" value="Aceptar">
                <a href="/" class="btn-cancel">Cancelar</a>
                <span id="submitErrors" class="text-danger"></span>
            </div>
        </form>
    </div>
    </div>

    
    <!--Fin Register-->
    <!-- footer-->
    <%-include('../partials/footer') %> 
    <!-- fin footer-->


     
    <script src="https://kit.fontawesome.com/f21216c2d3.js" crossorigin="anonymous"></script>
</body>


</html>