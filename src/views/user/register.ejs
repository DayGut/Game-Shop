    <!--Register-->
    <div class="register-form">
        <h1>Form Registration</h1>
        <form action="/user/registro" method="post" enctype="multipart/form-data">
            <label form="nombre">User name</label>
            <input type="text" name="name" >

            <label form="email">E-mail</label>
            <input type="email" name="email" >


            <label form="pass">Password</label>
            <input type="password" name="pass" >

            <label form="pass2">Repeat Password</label>
            <input type="password" name="pass" >

            <div class="form--group">
                <label for="avatar">Avatar</label>
                <input type="file" name="avatar" id="avatar" >
            </div><br>

            <div>
                <input class="form-check-input" name="terms" type="checkbox" value="" id="terms">
                <label class="form-check-label" for="terms">
                    Acepto los t√©rminos y condiciones
                </label>
            </div>   
            <div class="botones-registro">
                <a href="/" class="btn-cancel">Cancelar</a>
                <input type="submit" class="btn-save" value="save">
            </div>
        </form>

    </div>

    
    <!--Fin Register-->
    <!-- footer-->
    <%-include('../partials/footer') %> 
    <!-- fin footer-->



