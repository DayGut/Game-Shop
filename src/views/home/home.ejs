<!DOCTYPE html>
<html lang="en">
    <%-include('../partials/head') %>
<body>
    <!-- header-->
    <%-include('../partials/header') %>
<!--fin header-->
<!-- main-->
<main>
    <!-- Carrusel-->
<div class="slideshow-container">

    <!-- Full-width images with number and caption text -->
    <div class="mySlides fade">
      <img src="images/banner-juegos-1.jpg" style="width:100%">
    </div>
  
    <div class="mySlides fade">
      <img src="images/banner-juegos-8.jpeg" style="width:100%">
    </div>
  
    <div class="mySlides fade">
      <img src="images/banner-juegos-4.jpg" style="width:100%">
    </div>
  
    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
  </div>
  <br>
  
  <!-- The dots/circles -->
  <div style="text-align:center">
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
    <span class="dot" onclick="currentSlide(3)"></span>
  </div>
  <!--Fin Carrusel-->

  <section class="contenedor">
    <h2 class="titulo-seccion"> <%= products_title %> </h2>
    <div class="productos">
        <% products.forEach(product => { %>
            <article class="producto">
                <a class="product-detail" href="/products/detalle/<%= product.id %> ">
                    <div>
                        <img src="/images/<%= product.image %>" alt="">
                    </div>
                    <p class="product-name"><%= product.name %> </p>
                    <p class="description-prod"><%= product.description %></p>
                    <% if (product.discount > 0) { %>
                        <span class="descuento"><%= product.discount %> de descuento%</span>
                    <% }else{ %> <span class="descuento">Sin descuento</span> <% } %>
                    <div class="card__price">
                        <% if (product.discount > 0) { %>
                            <span class="precio-original">$ <%= product.price %> </span>$ <%= product.price - product.discount * product.price / 100 %>
                        <% } else { %>
                        $ <%= product.price %> 
                        <% } %>
                    </div>
                   
                </a>
                <form method="post">
                    <a class="boton-Prod" href="/products/carrito/<%=product.id%>">Comprar</a>
                </form>
            </article>
        <% }) %>
    </div>
</section>
    
    <section class="ofertas">
        <div class="contenedor">
            <h2 class="titulo-seccion">Ofertas del Mes</h2>
            <p class="copy">Lorem ipsum dolor sit amet consectetur adipisicing elit. Temporibus, rerum excepturi qui
            </p>
            <div class="contenedor-imagenes">
                <img src="/images/productBaner.gif" alt="img1">
                <img src="/images/ofertasBaner.jpeg" alt="img2">
                <img src="/images/gameshopBaner.jpg" alt="img3">
            </div>
        </div>
    </section>
</main>


<!-- fin main -->

<!-- footer-->
<%-include('../partials/footer') %> 
<!-- fin footer-->

    
</body>

</html>