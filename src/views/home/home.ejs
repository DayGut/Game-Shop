<!DOCTYPE html>
<html lang="en">
    <%-include('../partials/head') %>
<body>
    <!-- header-->
    <%-include('../partials/header') %>
    <script defer src="js/script.js"></script>
    
    
<!--fin header-->
<!-- main-->
<main>
    <!-- Carrusel-->
<div class="slideshow-container">

    <!-- Full-width images with number and caption text -->
    <div class="mySlides fade">
      <img src="images/banner-juegos-1.jpg" style="width:100%">
    </div>
  
    <div class="mySlides fade">
      <img src="images/banner-juegos-8.jpeg" style="width:100%">
    </div>
  
    <div class="mySlides fade">
      <img src="images/banner-juegos-4.jpg" style="width:100%">
    </div>
  
    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
  </div>
  <br>
  
  <!-- The dots/circles -->
  <div style="text-align:center">
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
    <span class="dot" onclick="currentSlide(3)"></span>
  </div>
  <!--Fin Carrusel-->

  <section class="contenedor">
    <h2 class="titulo-seccion"> <%= products_title %> </h2>
    <div class="productos">
        <% productos.forEach(productos => { %>
          
            <article class="producto">
                <a class="product-detail" href="/products/detalle/<%= productos.id %> ">
                    <div>
                        <img src="/images/<%= productos.imagen %>" alt="">
                    </div>
                    <p class="product-name"><%= productos.name %> </p>
                    <p class="description-prod"><%= productos.description %></p>
                    <% if (productos.discount > 0) { %>
                        <span class="descuento"><%= productos.discount %> de descuento%</span>
                    <% }else{ %> <span class="descuento">Sin descuento</span> <% } %>
                    <div class="card__price">
                        <% if (productos.discount > 0) { %>
                            <span class="precio-original">$ <%= productos.price %> </span>$ <%= productos.price - productos.discount * productos.price / 100 %>
                        <% } else { %>
                        $ <%= productos.price %> 
                        <% } %>
                    </div>
                   
                </a>
                <form method="post">
                    <a class="boton-Prod" href="/products/carrito/<%=productos.id%>">Comprar</a>
                </form>
            </article>
        <% }) %>
    </div>
</section>
    
    <section class="ofertas">
        <div class="contenedor">
            <h2 class="titulo-seccion">Mas productos</h2>
            <div class="contenedor-imagenes">
                <img src="/images/productBaner.gif" alt="img1">
                <img src="/images/ofertasBaner.jpeg" alt="img2">
                <img src="/images/gameshopBaner.jpg" alt="img3">
            </div>
        </div>
    </section>
</main>


<!-- fin main -->

<!-- footer-->
<%-include('../partials/footer') %> 
<!-- fin footer-->

    
</body>

</html>